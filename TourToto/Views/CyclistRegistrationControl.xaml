        <Grid Grid.Row="1" Background="LightBlue" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="48"
            Text="Wielrenners"
            TextWrapping="Wrap" />
