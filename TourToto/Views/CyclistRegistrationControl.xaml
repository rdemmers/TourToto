        <TabControl Grid.Row="3">
            <TabItem
                Width="110"
                Height="40"
                MinHeight="30"
                Margin="150,0,-150,0"
                HorizontalAlignment="Left"
                Header="Renners">
                <registration:CyclistRegistration />
            </TabItem>
            <TabItem
                Width="110"
                Height="40"
                MinHeight="30"
                Margin="150,0,-150,0"
                HorizontalAlignment="Left"
                Header="Teams">
                <registration:Team />
            </TabItem>
            <TabItem
                Width="110"
                Height="40"
                MinHeight="30"
                Margin="150,0,-150,0"
                HorizontalAlignment="Left"
                Header="Punten">
                <registration:Scoring />
            </TabItem>
        </TabControl>
